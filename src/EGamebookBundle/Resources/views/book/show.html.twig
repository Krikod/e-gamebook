{% extends '@EGamebook/layout.html.twig' %}

{% block body %}

    <h1 class="center">Book</h1>
    <div class="container">
        <div class="row">
            <div class="col s12">



                <a class="btn" href="{{ path('chapters_new', { 'id': book.id }) }}">Make a new Chapter</a>

            </div>


            {% for chapter in chapters %}
                <div class="col s12 m6 l3 card-panel book">



                    <a href="{{ path('chapters_show', { 'id': chapter.id }) }}">{{ chapter.number }}</a>


                    {{  froala_display(chapter.content) }}
                    <p>Relations with :
                        {% for child in chapter.childs %}
                            {{ child.number }} /
                        {% endfor %}
                    </p>

                    <a class="btn" href="{{ path('chapters_show', { 'id': chapter.id }) }}">show</a>

                    <a class="btn" href="{{ path('chapters_edit', { 'id': chapter.id }) }}">edit</a>


                    <a class="btn" href="{{ path('chapters_relations', { 'id': chapter.id }) }}">new relations</a>


                </div>

            {% endfor %}
            <div class="col s12">

                <a class="btn " href="{{ path('book_index') }}">Back to the list of books</a>

            </div>

        </div>
    </div>
{% endblock %}
