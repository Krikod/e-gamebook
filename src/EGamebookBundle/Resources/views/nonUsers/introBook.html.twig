{% extends '@EGamebook/layout.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="row-full">
            <a href="{{ path('e_gamebook_read', {'number': 1 , 'id': book.id}) }}">

                {% if book.fichiers.srcs is empty %}
                    <img class="photohaut responsive-img" src="{{ asset('bundles/platform/img/5973a860478c0.jpeg') }}">
                {% else %}
                    <img class="responsive-img" src="{{ asset('bundles/platform/img/' ~ book.fichiers.srcs[0] ) }}">
                {% endif %} <a/>
        </div>


        <div class="wrap">
            <a href="{{ path('e_gamebook_read', {'number': 1 , 'id': book.id}) }}" class="button"><p>Start Adventure</p></a>
        </div>
    </div>
</div>







{% endblock %}
